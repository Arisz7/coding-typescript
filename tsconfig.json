{
  "compilerOptions": {
    "target": "es2016",                                  
    "module": "commonjs",                                
    "rootDir": "src/",                                  
    "removeComments": true,
    "outDir": "sudo chmod 777 /dist",
    "noEmitOnError": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true                                 
  },
  "exclude": [
    "./plugins/**/*",
    "./typings/**/*"
]
}
